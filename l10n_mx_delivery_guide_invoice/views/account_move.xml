<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="guide_invoice_account_move_view" model="ir.ui.view">
            <field name="name">account.move.guide.invoice</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_move_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='payment_reference']" position="after">
                    <field name="l10n_mx_edi_is_guide_invoice" widget='boolean_toggle'/>
                </xpath>
                <xpath expr="//page[last()]" position="after">
                    <page id="guide_invoice" string="MX EDI" name="guide_invoice"
                          attrs="{'invisible': [('l10n_mx_edi_is_guide_invoice', '=',False)]}">
                        <group>
                            <group>
                                <field name="l10n_mx_edi_origin_filter" invisible="1"/>
                                <field name="l10n_mx_edi_transport_type"/>
                                <field name="l10n_mx_edi_origin_id"
                                       domain="[('id','in',l10n_mx_edi_origin_filter)]"
                                       options="{'no_create': True, 'no_create_edit':True,'no_open': True}"/>
                                <field name="l10n_mx_edi_distance"/>
                            </group>
                            <group>
                                <field name="l10n_mx_edi_shipping_filter" invisible="1"/>
                                <field name="l10n_mx_edi_vehicle_id"
                                       options="{'no_create': True, 'no_create_edit':True,'no_open': True}"/>
                                <field name="l10n_mx_edi_shipping_id"
                                       domain="[('id','in',l10n_mx_edi_shipping_filter)]"
                                       options="{'no_create': True, 'no_create_edit':True,'no_open': True}"/>
                            </group>
                        </group>
                    </page>
                </xpath>
            </field>
        </record>
    </data>
</odoo>